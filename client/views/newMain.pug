extends layout 

block main 
  .navi.left
    a.button.left(href="/home") BACK TO HOME 
  .navi.right
    a.button.right(href="/newCombo") ADD SUBSTITUTE

  .flexDisplay
    .inputDisplay 
      form(action="/newMain" method="post")
        dl
          dt 
            label(for="nameMain") Add a new ingredient
          dd 
            input.form(type="text"
                      id="nameMain"
                      name="nameMain"
                      placeholder="Ingredient Name")

        fieldset.actions 
          input#submit(type="submit" value="SUBMIT")